<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appBarLayoutMyRequestDetail"
        android:layout_width="match_parent"
        android:layout_height="@dimen/appBarHeight"
        android:elevation="4dp"
        android:theme="@style/AppTheme.AppBarOverlay">
        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbarMyRequestDetail"
            app:title="Request's Detail"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/colorPrimary"
            app:popupTheme="@style/AppTheme.PopupOverlay"
            />
    </com.google.android.material.appbar.AppBarLayout>

    <RelativeLayout
        android:layout_below="@+id/appBarLayoutMyRequestDetail"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/iv_mrf_on_click_image"
        android:layout_width="110dp"
        android:layout_height="120dp"
        android:layout_marginTop="10dp"
        app:srcCompat="@drawable/default_profile_pic"
        android:layout_centerHorizontal="true">

    </androidx.appcompat.widget.AppCompatImageView>

    <LinearLayout
        android:id="@+id/ll_mrf_on_click_1"
        android:layout_marginTop="5dp"
        android:layout_below="@+id/iv_mrf_on_click_image"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:orientation="vertical">

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_mrf_on_click_name"
                android:layout_marginStart="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textColor="@color/defaultContentColor"
                android:text="Request Name: ">

            </androidx.appcompat.widget.AppCompatTextView>
            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_mrf_on_click_nameFB"
                android:layout_marginStart="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:lines="2"
                android:textColor="@color/defaultContentColor"
                android:text="Request Name FB">

            </androidx.appcompat.widget.AppCompatTextView>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_mrf_on_click_2"
        android:layout_below="@+id/ll_mrf_on_click_1"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:orientation="vertical">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_mrf_on_click_desc"
            android:layout_marginStart="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textColor="@color/defaultContentColor"
            android:text="Request Description: ">

        </androidx.appcompat.widget.AppCompatTextView>
        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_mrf_on_click_descFB"
            android:layout_marginStart="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scrollbars="vertical"
            android:lines="8"
            android:textColor="@color/defaultContentColor"
            android:text="Request Description FB">

        </androidx.appcompat.widget.AppCompatTextView>

    </LinearLayout>
    <LinearLayout
        android:id="@+id/ll_mrf_on_click_3"
        android:layout_below="@+id/ll_mrf_on_click_2"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:orientation="vertical">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_mrf_on_click_status"
            android:layout_marginStart="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textColor="@color/defaultContentColor"
            android:text="Request Status: ">

        </androidx.appcompat.widget.AppCompatTextView>
        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_mrf_on_click_statusFB"
            android:layout_marginStart="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/defaultContentColor"
            android:text="Request Status FB">

        </androidx.appcompat.widget.AppCompatTextView>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_mrf_on_click_4"
        android:layout_below="@+id/ll_mrf_on_click_3"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:orientation="vertical">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_mrf_on_click_assigned"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:textColor="@color/defaultContentColor"
            android:text="Request Assigned: "
            android:textStyle="bold">

        </androidx.appcompat.widget.AppCompatTextView>

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_mrf_on_click_assignedFB"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:textColor="@color/defaultContentColor"
            android:text="Request Assigned FB">

        </androidx.appcompat.widget.AppCompatTextView>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_mrf_on_click_5"
        android:layout_below="@+id/ll_mrf_on_click_4"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:orientation="horizontal">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_mrf_on_click_edit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:layout_margin="10dp"

            android:padding="5dp"
            android:layout_gravity="center"
            android:textColor="@color/colorAccent"
            android:background="@drawable/button_style_corner"
            android:text="@string/edit_requests"/>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_mrf_on_click_delete"
            android:layout_margin="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:padding="5dp"
            android:layout_gravity="center"
            android:textColor="@color/colorAccent"
            android:background="@drawable/button_style_corner"
            android:text="Delete Request"/>
    </LinearLayout>

    </RelativeLayout>

</RelativeLayout>