<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="8dp"
        android:layout_margin="5dp"
        android:animateLayoutChanges="true"
        app:cardElevation="8dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:weightSum="1.0"
            >

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/ivRVHDFDonorItem"
                android:layout_width="75dp"
                android:layout_height="85dp"
                android:layout_margin="5dp"
                app:srcCompat="@drawable/default_profile_pic"
                android:layout_weight="0.004"
                />
            <LinearLayout
                android:layout_marginTop="15dp"
                android:layout_marginStart="5dp"
                android:layout_weight="0.99"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tvRVHDFDonorName"
                    android:layout_width="210dp"
                    android:layout_height="wrap_content"
                    android:text="Post Title"
                    android:textColor="#337DC6"
                    android:textStyle="bold"
                    android:background="@color/white"
                    android:textSize="20sp" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tvRVHDFDonorDesc"
                    android:layout_width="210dp"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:layout_below="@+id/tvRVHDFDonorName"
                    android:textColor="#BE3A6A9A"
                    android:background="@color/white"
                    android:text="Post Description"
                    android:layout_marginTop="5dp"
                    android:textSize="18sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_weight="0.01"
                android:layout_width="wrap_content"
                android:layout_height="match_parent">

                <ImageView
                    android:visibility="visible"
                    android:id="@+id/ivHDFWish"
                    android:layout_margin="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/ic_baseline_favorite_border_24"/>

                <ImageView
                    android:id="@+id/ivHDFReq"
                    android:layout_margin="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:visibility="gone"
                    android:src="@drawable/ic_icons8_sand_timer_50"/>

            </LinearLayout>


    </LinearLayout>

    </androidx.cardview.widget.CardView>

</RelativeLayout>